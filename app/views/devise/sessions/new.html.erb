<div class="container login">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <div class="flip">
        <div class="card"> 
          <div class="face front"> 
            <div class="panel panel-default">
                <br>

                <h1 class="thin-text text-center">Sign in</h1>

                <br>
                 <%= form_for(resource, as: resource_name, url: session_path(resource_name),class: "form-horizontal") do |f|%>
                  <div class="field">
                    <%= f.label :email,class: "thin-text" %><br/>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control" %>
                  </div>

                  <div class="field">
                    <%= f.label :password, class: "thin-text" %><br />
                    <%= f.password_field :password, autocomplete: "off",class: "form-control" %>
                  </div>

                  <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me,class: "thin-text" %>
                    </div>
                  <% end %>   
                  <p class="text-right"><a href="#">Forgot Password</a></p>
                  <div class="actions">
                    <%= f.submit "Log in",class: "btn btn-primary btn-block" %>
                  </div>
                <% end %>
                <hr>
                <p class="blue">Sign in with</p>
                <p>
                  <i class="fa fa-facebook-f fa-lg"></i>
                  <i class="fa fa-twitter fa-lg"></i>
                  <i class="fa fa-google-plus fa-lg"></i>
                </p>
                <p class="text-center">
                  <%= link_to "Create new account?", new_registration_path(resource_name),class: "fliper-btn" %>
                </p>
            </div>
          </div> 
        </div>
      <div class="col-md-4"></div>
      </div>
    </div>
  </div>
</div><!-- /.container -->
